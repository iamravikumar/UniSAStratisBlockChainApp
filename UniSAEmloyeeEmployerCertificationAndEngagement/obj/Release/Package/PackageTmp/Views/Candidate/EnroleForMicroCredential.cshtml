@model UniSAEmloyeeEmployerCertificationAndEngagement.Models.EnroleForMicroCredentialViewModel

@{
    ViewBag.Title = "EnroleForMicroCredentialViewModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div style="padding:10px !important;">
        <h2>Gained @User.Identity.Name</h2>
        <div style="padding:5px !important; border-radius: 5px !important;">
            @{Html.RenderAction("ViewCandidateDigitalBadgesByEmail", "Candidate"); }
        </div>
        <div style="padding:5px !important;">
            <hr />
        </div>
        <h2>Enrole For Micro Credential</h2>

        @using (Html.BeginForm("EnroleForMicroCredential", "Candidate"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Enrole For MicroCredential Course</h4>
                <div><em>@User.Identity.Name</em></div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.CandidateId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CandidateId, new { @readonly = "true", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CandidateId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MicroCredentialId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MicroCredentialId", ViewBag.MicroCredentials as List<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MicroCredentialId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Enrole" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>